{
  "name": "cyrcid-dpp",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "exporters/*"
  ],
  "scripts": {
  "ci": "node scripts/validate.js",
  "validate:pack": "node packages/schema/validate-pack.mjs knowledge/packs/apparel-v1/manifest.yaml",
  "validate:all-packs": "node packages/schema/validate-pack.mjs $(git ls-files 'knowledge/packs/*/manifest.yaml')",
  "test:registry": "node packages/schema/validate-registry.mjs knowledge/registry.json"
}
  "devDependencies": {
    "ajv": "^8",
    "ajv-formats": "^2",
    "yaml": "^2"
  }
}
