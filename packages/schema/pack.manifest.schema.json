{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "pack.manifest.schema.json",
  "title": "Knowledge Pack Manifest",
  "type": "object",
  "additionalProperties": true,
  "required": ["id", "version", "categories", "contracts", "exposed", "links"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+-v\\d+$"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": { "type": "string" },
    "json_key_language": { "type": "string" },
    "categories": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "links": {
      "type": "object",
      "required": ["lci_map"],
      "properties": {
        "lci_map": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": true
    },
    "contracts": {
      "type": "object",
      "required": ["dpp_schema_version"],
      "properties": {
        "dpp_schema_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      },
      "additionalProperties": true
    },
    "exposed": {
      "type": "object",
      "required": ["defaults_dir", "relevance_dir", "vocab_dir"],
      "properties": {
        "defaults_dir": { "type": "string", "minLength": 1 },
        "relevance_dir": { "type": "string", "minLength": 1 },
        "vocab_dir": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": true
    },
    "assumptions": {
      "type": "object",
      "properties": {
        "region": { "type": "string" },
        "units": { "type": "string" },
        "transparency": {
          "type": "object",
          "properties": {
            "ai_estimate_flag": { "type": "boolean" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  }
}
